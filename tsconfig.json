{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "module": "commonjs",
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": ".",
    "noEmitOnError": true,
    "paths": {
      "@tests/*":["__tests__/*"],
      "@auth/*": ["src/auth/*"],
      "@shared/*": ["src/shared/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "include": ["./src"],
  "exclude": ["node_modules", "**/*.test.ts", "dist"]
}
